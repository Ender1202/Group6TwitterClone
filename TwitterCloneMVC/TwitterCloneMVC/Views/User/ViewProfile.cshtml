@model Twitter.Models.User
@{

    Layout = null;
    var loggedInUser = (Twitter.Models.User)Session["User"];
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Profile - ThreadX</title>
    <link rel="icon" href="https://abs.twimg.com/favicons/twitter.ico" type="image/png" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body class="min-h-screen bg-gray-100">
    <!-- Header -->
    <header class="bg-white shadow-sm">
        <div class="container mx-auto px-4 py-3 flex items-center justify-between">
            <div class="flex items-center">
                <img src="https://abs.twimg.com/favicons/twitter.ico" alt="Logo" width="32" height="32" />
                <span class="text-xl font-semibold ml-2">ThreadX</span>
            </div>
            <div class="flex-grow max-w-xl px-4">
                <input type="text" placeholder="Search ThreadX"
                       class="w-full bg-gray-100 rounded-full py-2 px-4 focus:outline-none focus:ring-2 focus:ring-blue-500" />
            </div>
        </div>
    </header>

    <!-- Profile Page Content -->
    <div class="container mx-auto px-4 py-8 flex">
        <!-- Left Sidebar -->
        <div class="w-full md:w-1/4 p-4 md:block">
            <div class="md:fixed">
                <nav class="flex flex-row md:flex-col justify-around md:justify-start">
                    <a href="/User/Dashboard" class="w-full flex items-center text-lg mb-2 justify-start text-gray-900 hover:bg-gray-200 p-2 rounded-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-fill" viewBox="0 0 16 16">
                            <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L8 2.207l6.646 6.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293z" />
                            <path d="m8 3.293 6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293z" />
                        </svg>
                        Home
                    </a>
                    <a href="/User/UserProfile" class="w-full flex items-center text-lg mb-2 justify-start text-gray-900 hover:bg-gray-200 p-2 rounded-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                            <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
                        </svg>
                        Profile
                    </a>
                    <a href="/Tweet/UserTweets" class="w-full flex items-center text-lg mb-2 justify-start text-gray-900 hover:bg-gray-200 p-2 rounded-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-twitter" viewBox="0 0 16 16">
                            <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334q.002-.211-.006-.422A6.7 6.7 0 0 0 16 3.542a6.7 6.7 0 0 1-1.889.518 3.3 3.3 0 0 0 1.447-1.817 6.5 6.5 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.32 9.32 0 0 1-6.767-3.429 3.29 3.29 0 0 0 1.018 4.382A3.3 3.3 0 0 1 .64 6.575v.045a3.29 3.29 0 0 0 2.632 3.218 3.2 3.2 0 0 1-.865.115 3 3 0 0 1-.614-.057 3.28 3.28 0 0 0 3.067 2.277A6.6 6.6 0 0 1 .78 13.58a6 6 0 0 1-.78-.045A9.34 9.34 0 0 0 5.026 15" />
                        </svg>
                        My Tweets
                    </a>


                    <a href="#" class="w-full flex items-center text-lg mb-2 justify-start text-gray-900 hover:bg-gray-200 p-2 rounded-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bell-fill" viewBox="0 0 16 16">
                            <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2m.995-14.901a1 1 0 1 0-1.99 0A5 5 0 0 0 3 6c0 1.098-.5 6-2 7h14c-1.5-1-2-5.902-2-7 0-2.42-1.72-4.44-4.005-4.901" />
                        </svg>
                        Notifications
                    </a>

                    <a href="/Following/Followers?userId=@loggedInUser.UserId" class="w-full flex items-center text-lg mb-2 justify-start text-gray-900 hover:bg-gray-200 p-2 rounded-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-heart" viewBox="0 0 16 16">
                            <path d="M9 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0m-9 8c0 1 1 1 1 1h10s1 0 1-1-1-4-6-4-6 3-6 4m13.5-8.09c1.387-1.425 4.855 1.07 0 4.277-4.854-3.207-1.387-5.702 0-4.276Z" />
                        </svg>
                        Followers
                    </a>

                    <a href="/Following/FollowingUsers?userId=@loggedInUser.UserId" class="w-full flex items-center text-lg mb-2 justify-start text-gray-900 hover:bg-gray-200 p-2 rounded-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-plus-fill" viewBox="0 0 16 16">
                            <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
                            <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5" />
                        </svg>
                        Following
                    </a>
                </nav>
                
            </div>
        </div>
        <!-- Profile Section -->
        <main class="flex-grow max-w-2xl">
            <div class="bg-white rounded-lg shadow p-4 relative">
                <!-- Profile Header -->
                <div class="relative mb-4">
                    <div class="bg-gray-200 h-48 w-full rounded-t-lg">
                        <img src="~/Assets/CoverImage/Designer.png" alt="Cover"
                             class="h-full w-full object-cover rounded-t-lg" />
                    </div>
                    <div class="absolute bottom-0 left-4">
                        <img src="@Model.Pic" alt="Profile"
                             class="w-32 h-32 rounded-full border-4 border-white" />
                    </div>
                </div>

                <!-- Profile Details -->
                <div class="flex justify-between items-center mt-16">
                    <div>
                        <h1 class="text-2xl font-semibold">@Model.Fullname</h1>
                        <p class="text-gray-600">@Model.UserName</p>
                    </div>
                    <div class="text-right">
                        <p class="text-sm text-gray-600">Joined: @Model.JoiningDate</p>
                    </div>
                </div>

                <div class="mt-5 bg-gray-50 p-4 rounded-lg shadow-inner">
                    <!-- Bio -->
                    <div class="mb-4">
                        <h3 class="font-semibold text-gray-700">Bio</h3>
                        <p class="text-gray-800">@Model.Bio</p>
                    </div>
                    <!-- Email -->
                    <div class="mb-4">
                        <h3 class="font-semibold text-gray-700">Email</h3>
                        <p class="text-gray-800">@Model.Email</p>
                    </div>
                </div>

                <!-- Tabs Section -->
                <div class="tabs mt-5">
                    <ul class="flex space-x-4 border-b">
                        <li>
                            <a href="#tweets" class="text-blue-600 font-semibold py-2 border-b-2 border-blue-600">Tweets</a>
                        </li>
                        <li>
                            <a href="#media" class="text-gray-600 hover:text-blue-600 font-semibold py-2">Media</a>
                        </li>
                        <li>
                            <a href="#likes" class="text-gray-600 hover:text-blue-600 font-semibold py-2">Likes</a>
                        </li>
                    </ul>

                    <div class="mt-4">
                        <div id="tweets" class="tab-content">
                            <h4 class="text-lg font-semibold">Tweets</h4>
                            <p class="text-gray-600">User's tweets will be displayed here.</p>
                        </div>
                        <div id="media" class="tab-content hidden">
                            <h4 class="text-lg font-semibold">Media</h4>
                            <p class="text-gray-600">User's media will be displayed here.</p>
                        </div>
                        <div id="likes" class="tab-content hidden">
                            <h4 class="text-lg font-semibold">Likes</h4>
                            <p class="text-gray-600">User's liked tweets will be displayed here.</p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>

