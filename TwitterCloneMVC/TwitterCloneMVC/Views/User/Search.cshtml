@model List<TwitterCloneMVC.Models.UserDTO>

@{

    Layout = null;

    var loggedInUser = (Twitter.Models.User)Session["User"]; // Retrieve logged-in user from session

}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Search Users - ThreadX</title>
    <link rel="icon" href="https://abs.twimg.com/favicons/twitter.ico" type="image/png" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</head>

<div class="min-h-screen bg-gray-100">
    <header class="bg-white shadow-sm">
        <div class="container mx-auto px-4 py-3 flex items-center justify-between">
            <div class="flex items-center">
                <img src="https://abs.twimg.com/favicons/twitter.ico" alt="Logo" width="32" height="32" />
            </div>

            @using (Html.BeginForm("Search", "User", FormMethod.Post))

            {
                <div class="flex-grow max-w-xl px-4">
                    <input type="text" placeholder="Search for users" class="w-full bg-gray-100 rounded-full py-2 px-4 pl-10 focus:outline-none focus:ring-2" name="username" id="username" />
                </div>

            }
            <div class="flex items-center">
                <a href="/User/UserProfile" class="p-2 rounded-full hover:bg-gray-200"><strong>@loggedInUser.Fullname</strong></a>
                <img src="@loggedInUser.Pic" alt="Profile" class="profile-picture" style="width: 50px; height: 50px; object-fit: cover; border-radius: 50%;" />
            </div>
        </div>
    </header>

    <div class="container mx-auto px-4 py-8 flex">
        <!-- Left Sidebar -->
        <nav class="w-64 pr-4 hidden md:block">
            <ul class="space-y-2">
                <li><a href="/User/Dashboard" class="flex items-center p-2 rounded-full hover:bg-gray-200">Home</a></li>
                <li><a href="/Tweet/UserTweets" class="flex items-center p-2 rounded-full hover:bg-gray-200">My Tweets</a></li>
                <li><a href="/User/UserProfile" class="flex items-center p-2 rounded-full hover:bg-gray-200">Profile</a></li>
            </ul>
        </nav>

        <!-- Main Content -->
        <main class="flex-grow max-w-2xl">
            <!-- Search Results -->
            <h2 class="text-2xl font-bold mb-4">Search Results</h2>
            <div class="space-y-4">

                @foreach (var user in Model)

                {
                    <div class="bg-white rounded-lg shadow p-4 flex justify-between items-center">
                        <div class="flex items-center space-x-3">
                            <img src="@user.Pic" alt="Profile Picture" class="h-12 w-12 rounded-full object-cover" />
                            <div>
                                <p class="font-bold">@user.Fullname</p>
                                <p class="text-gray-500 text-sm">@user.UserName</p>
                                @*<p>@user.Bio</p>*@
                            </div>
                        </div>
                        @{Url.Action("IsFollowing", "Following", new { userId = user.UserId, followingId = loggedInUser.UserId });
                            if (user.IsFollowing == false)
                            {
                                <a href="@Url.Action("FollowUser", "Following", new { userId = user.UserId, followerId = loggedInUser.UserId })" class="text-white bg-blue-500 hover:bg-blue-700 px-3 py-1.5 rounded-lg flex items-center space-x-2 transition ease-in-out duration-300 shadow-lg">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 12h14"></path>
                                    </svg>
                                    <span>Follow</span>
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("UnfollowUser", "Following", new { userId = user.UserId, followingId = loggedInUser.UserId })" class="text-white bg-blue-500 hover:bg-blue-700 px-3 py-1.5 rounded-lg flex items-center space-x-2 transition ease-in-out duration-300 shadow-lg">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 12h14"></path>
                                    </svg>
                                    <span>Unfollow</span>
                                </a>
                            }
                        }
                    </div>

                }
            </div>
        </main>

        <!-- Right Sidebar -->
        <aside class="w-64 pl-4 hidden md:block">
            <div class="bg-white rounded-lg shadow p-4">
                <h2 class="text-xl font-bold mb-4">Popular Users</h2>
                <ul class="space-y-2">
                    <li><a href="#" class="hover:underline">Trending Topic 1</a></li>
                    <li><a href="#" class="hover:underline">Trending Topic 2</a></li>
                    <li><a href="#" class="hover:underline">Trending Topic 3</a></li>
                </ul>
            </div>
        </aside>
    </div>
</div>

