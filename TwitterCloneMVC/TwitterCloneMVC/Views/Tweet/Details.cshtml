@model Twitter.Entities.Tweet

@{
    ViewBag.Title = "Tweet Details";
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f5f8fa;
        }

        .tweet-container {
            background-color: #fff;
            border: 1px solid #e1e8ed;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 10px;
        }

        .tweet-header {
            font-weight: bold;
            font-size: 1.2em;
        }

        .tweet-body {
            margin-top: 10px;
            font-size: 1.1em;
        }

        .tweet-footer {
            margin-top: 10px;
            color: #657786;
        }

        .tweet-actions a {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="my-4">Tweet Details</h2>
        <div class="tweet-container">
            <div class="tweet-header">
                @Html.DisplayFor(model => model.UserId)
            </div>
            <div class="tweet-body">
                @Html.DisplayFor(model => model.Message)
            </div>
            <div class="tweet-footer">
                @Html.DisplayFor(model => model.Created)
            </div>
            <div class="tweet-actions mt-3">
                @Html.ActionLink("Edit", "Edit", new { id = Model.TweetId }, new { @class = "btn btn-secondary btn-sm" }) |
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary btn-sm" })
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    @*<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>*@
</body>
</html>