@model IEnumerable<Twitter.Entities.Tweet>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f5f8fa;
        }

        .tweet-container {
            background-color: #fff;
            border: 1px solid #e1e8ed;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 10px;
        }

        .tweet-header {
            font-weight: bold;
        }

        .tweet-actions a {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="my-4">Tweets</h2>
        <p>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
        </p>
        <div class="tweet-list">
            @foreach (var item in Model)
            {
                <div class="tweet-container">
                    <div class="tweet-header">
                        @Html.DisplayFor(modelItem => item.UserId)
                    </div>
                    <div class="tweet-body">
                        @Html.DisplayFor(modelItem => item.Message)
                    </div>
                    <div class="tweet-footer text-muted">
                        @Html.DisplayFor(modelItem => item.Created)
                    </div>
                    <div class="tweet-actions">
                        @Html.ActionLink("Edit", "Edit", new { id = item.TweetId }, new { @class = "btn btn-secondary btn-sm" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.TweetId }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.TweetId }, new { @class = "btn btn-danger btn-sm" })
                    </div>
                </div>
            }
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    @*<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>*@
</body>
</html>
